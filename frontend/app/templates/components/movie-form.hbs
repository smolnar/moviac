<form {{ action "save" on="submit" }}>

  {{#each errors as |error|}}
    <div class="alert alert-danger" role="alert">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        {{ error.attribute }} {{ error.message }}
      </div>
  {{/each}}

  <div class="row">
    <div class="col-sm-6">
      <fieldset class="form-group">
        <label for="title">Title</label>
        {{ input id="title" value=title class="form-control" placeholder="Enter movie title" }}
        <small class="text-muted">Movie attributes are fetched from IMDB by title</small>
      </fieldset>
    </div>

    <div class="col-sm-6">
      <fieldset class="form-group">
        <label for="rating">Rating</label>

        {{ view 'select' value=rating content=ratings class="form-control" }}
      </fieldset>
    </div>
  </div>

  <fieldset class="form-group">
    <label for="directors">Directors</label>
    {{ input id="directors" value=directorsList class="form-control" placeholder="Enter directors names, separated by comma" }}
    <small class="text-muted">Separate multiple directors names by comma</small>
  </fieldset>

  <fieldset class="form-group">
    <label for="actors">Actors</label>
    {{ input id="actors" value=actorsList class="form-control" placeholder="Enter actors names" }}
    <small class="text-muted">Separate multiple actors names by comma</small>
  </fieldset>

  <div class="form-group text-right">
    <button type="submit" class="btn btn-primary">Find & Save</button>
  </div>
</form>
<hr>

